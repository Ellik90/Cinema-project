@model BiotrananMVC.Models.Movie

<div class="text-center">
    <h1 class="display-4">Filminformation</h1>
</div>

<div class="movie-details">
    <img src="@Model.ImageLink">
    <h3>@Model.Title</h3>
    <p>Beskrivning: @Model.Description</p>
    <p>Regissör: @Model.Directors</p>
    <p>Skådespelare: @Model.Actors</p>
    <p>Speltid: @Model.MovieLengthString</p>
    <p>Språk: @Model.Language</p>
    <p>Premiär år: @Model.YearOfPublished</p>
</div>

<div class="text-center my-5">
    <a asp-controller="Home" asp-action="UpcomingViews" class="btn btn-primary mx-2">Kommande filmvisningar</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-2">Till första sidan</a>
</div>




