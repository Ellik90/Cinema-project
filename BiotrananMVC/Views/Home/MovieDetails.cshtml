@model BiotrananMVC.Models.Movie

<div class="text-center">
    <h1 class="display-4">Filminformation</h1>
</div>

<div class="movie-details">
    <img src="@Model.ImageLink">
    <h3>@Model.Title</h3>
    <p>Beskrivning: @Model.Description</p>
    <p>Regissör: @Model.Directors</p>
    <p>Skådespelare: @Model.Actors</p>
    <p>Speltid: @Model.MovieLengthString</p>
    <p>Språk: @Model.Language</p>
</div>

<h3>
    <a asp-controller="Home" asp-action="UpcomingViews">Tillbaka</a>
</h3>


